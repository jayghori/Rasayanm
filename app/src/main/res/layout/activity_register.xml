<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:elevation="30dp"
        android:ellipsize="end"
        android:padding="5dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:clickable="false"
                android:src="@drawable/rasayanmicon" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtName"
                android:hint="Enter Name"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtEmail"
                android:hint="Enter Email"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtPhoneNumber"
                android:hint="Enter PhoneNumber"
                android:textColor="@color/black"
                android:maxLength="10"
                android:inputType="phone"
                android:fontFamily="sans-serif-medium"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtAddress"
                android:hint="Enter Address"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtGST"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textColorHint="@color/black"
                android:hint="GST Number"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtPanNumber"
                android:hint="PAN Number"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:text="upload image"
                android:id="@+id/tvUploadImageUrl"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="wrap_content"
                    android:text="Select"
                    android:id="@+id/btnSelect"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textColorHint="@color/black"
                android:text="Cancle Check and Photo"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtPassword"
                android:hint="Create passcode"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPassword"
                android:layout_height="wrap_content"/>


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edtReEnterPassword"
                android:hint="Re-enter passcode"
                android:inputType="textPassword"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnRegister"
                android:text="Register"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/linearLayoutLogin"
                android:textColor="#FAF6F6"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Have an Account?"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Log in"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Dark_red" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>